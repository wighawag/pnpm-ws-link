{
	"name": "pnpm-ws-link",
	"version": "0.0.3",
	"description": "CLI tool to generate pnpm overrides for linking external workspace packages",
	"keywords": ["pnpm", "workspace", "link", "overrides", "monorepo"],
	"author": "wighawag",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/wighawag/pnpm-ws-link.git"
	},
	"homepage": "https://github.com/wighawag/pnpm-ws-link#readme",
	"bugs": {
		"url": "https://github.com/wighawag/pnpm-ws-link/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"pnpm-ws-link": "dist/index.js"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"glob": "^10.4.5",
		"js-yaml": "^4.1.1"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^25.0.3",
		"as-soon": "^0.0.11",
		"typescript": "^5.9.3",
		"viem": "^2.41.2"
	},
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"dev": "as-soon -w src pnpm build"
	}
}
